{
  "name": "@mixxtor/adonisjs-grammy",
  "description": "Integration between AdonisJS with the Telegram Bot API using Grammy framework",
  "version": "1.0.0-beta.0",
  "engines": {
    "node": ">=20"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build/src",
    "build/services",
    "build/providers",
    "build/stubs",
    "build/configure.d.ts",
    "build/configure.js",
    "build/index.d.ts",
    "build/index.js",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./services/main": "./build/services/main.js",
    "./grammy_provider": "./build/providers/grammy_provider.js",
    "./types": "./build/src/types/main.js"
  },
  "scripts": {
    "test": "c8 npm run quick:test",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "pretest": "npm run lint",
    "clean": "del-cli build",
    "typecheck": "tsc --noEmit",
    "copy:templates": "copyfiles \"stubs/**/**/*.stub\" build",
    "precompile": "npm run lint && npm run clean",
    "compile": "npm run clean && tsc",
    "postcompile": "npm run copy:templates",
    "build": "npm run compile",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "release:beta": "release-it --preRelease=beta",
    "release:alpha": "release-it --preRelease=alpha",
    "release:dry": "release-it --dry-run"
  },
  "devDependencies": {
    "@adonisjs/core": "^6.19.0",
    "@adonisjs/eslint-config": "^2.1.2",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@swc/core": "^1.13.20",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.5.2",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "del-cli": "^7.0.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.36.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "release-it": "^19.0.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "grammy": "^1.38.2"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.19.0"
  },
  "author": {
    "name": "Mixxtor",
    "email": "mixxtor@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/mixxtor/adonisjs-grammy#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mixxtor/adonisjs-grammy.git"
  },
  "bugs": {
    "url": "https://github.com/mixxtor/adonisjs-grammy/issues"
  },
  "keywords": [
    "adonisjs",
    "grammy",
    "telegram",
    "telegram-bot"
  ],
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": "@adonisjs/prettier-config",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "push": true,
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "Release v${version}",
      "releaseNotes": null,
      "autoGenerate": true,
      "draft": false,
      "preRelease": false
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "adonisjs": {
    "types": "@mixxtor/adonisjs-grammy",
    "providers": [
      "@mixxtor/adonisjs-grammy/provider"
    ]
  }
}
